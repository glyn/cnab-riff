{
    "name": "riff",
    "version": "0.1.0",
    "description": "Installs riff",
    "keywords": [
        "riff"
    ],
    "maintainers": [
        {
            "name": "Swapnil Bawaskar",
            "email": "sbawaska@pivotal.io",
            "url": "https://example.com"
        }
    ],
    "invocationImages": {
        "cnab": {
            "name": "cnab",
            "builder": "docker",
            "configuration": {
                "registry": "projectriff"
            }
        }
    },
    "credentials": {
        "kubeconfig": {
            "path": "/root/.kube/config"
        }
    },
    "parameters": {
        "node_port": {
            "type": "boolean",
            "metadata": {
                "description": "should LoadBalancer should be substituted with node port"
            },
            "destination": {
                "env": "NODE_PORT"
            },
            "default": "false"
        },
        "manifest_file": {
            "type": "string",
            "metadata": {
                "description": "absolute path to the manifest file"
            },
            "destination": {
                "env:": "MANIFEST_FILE"
            },
            "default": "/cnab/app/kab/manifest.yaml"
        }
    }
}